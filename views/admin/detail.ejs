<%- include("../layouts/header") %> 

    <!-- Body -->
    <main>
        <div class="container">
            <section class="top-cards my-4">
                <div class="row">
                    <div class="col-md-6 p-2">
                        <div class="card">
                            <div class="card-header text-center">
                                <h5><%= admin.firstname %> <%= admin.lastname %> </h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Email: </strong><%= admin.email %> </p>
                                <p><strong>Phone Number: </strong><%= admin.phone_number %> </p>
                                <p><strong>Address: </strong><%= admin.address %> </p>
                                <small>Joined <%= admin.date_joined %> </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 p-2">
                        <div class="card text-center">
                            <div class="card-header">
                                <h5>EXAMS CREATED</h5>
                            </div>
                            <div class="card-body">
                                <h5><%= admin.exams.length %> </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="bottom-table my-4">
                <h4>EXAMS CREATED</h4>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Date Created</th>
                            <th scope="col">Questions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% admin.exams.forEach(exam => { %>
                            <tr>
                                <td><%= exam.name %> </td>
                                <td><%= exam.date_created %> </td>
                                <td>3</td>
                            </tr>
                        <% }) %> 
                    </tbody>
                </table>
            </section>
        </div>
    </main>
    <!-- Body -->


<%- include("../layouts/footer") %> 