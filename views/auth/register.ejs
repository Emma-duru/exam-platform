<%- include("../layouts/header") %>

    <!-- Body -->
    <main>
        <div class="container">
            <section class="register-container my-4">
                <h4 class="text-center my-4">REGISTER</h4>
                <div class="register-form">
                    <form id="user-register">
                        <input type="text" name="firstname" class="form-control my-2" placeholder="First Name">
                        <input type="text" name="lastname" class="form-control my-2" placeholder="Last Name">
                        <input type="text" class="form-control my-2" name="email" placeholder="Email Address">
                        <input type="tel" name="phone_number" class="form-control my-2" placeholder="Phone Number">
                        <textarea name="address" class="form-control my-2" cols="10" rows="3" placeholder="Address"></textarea>
                        <input type="password" class="form-control my-2" name="password" placeholder="Password">
                        <!-- <input type="password" class="form-control my-2" name="confirmPassword" placeholder="Confirm Password"> -->
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </section>
        </div>
    </main>
    <!-- Body -->

    <script src="/js/register.js"></script>
<%- include("../layouts/footer") %> 